# Maintainer: Tibo De Peuter <tibo.depeuter@gmail.com>
pkgbase=tdpeuter
pkgname=(tdpeuter-base tdpeuter-dev tdpeuter-desktop tdpeuter-me)
pkgver=0.0.1
pkgrel=1
pkgdesc="Sysconfig for my systems"
arch=(any)
url="https://git.depeuter.tk/tdpeuter/arch-pkgs"
license=(GPL)
groups=(tdpeuter)

package_tdpeuter-base() {
    
    # Linux base
    depends=(
        base 
        linux 
        linux-firmware
    )
}

package_tdpeuter-dev() {
    depends=(
        git
    )

    # C/C++ programming
    depends+=(
        boost
        boost-libs
        cmake
        gcc
        gdb
        glew
        pkg-config
        sdl2
        sdl2_image
    )

    # Haskell programming
    depends+=(
        stack
    )

    # Networking
    depends+=(
        termshark
        traceroute
        wireshark-qt
    )
}

package_tdpeuter-desktop() {
   
    # Base of sway desktop
    depends=(
        alacritty
        brightnessctl
        dunst
        sway
        swaybg-git
        swayidle
        swaylock-effects-git
        waybar
        xorg-xwayland
    )

    # Fonts
    depends+=(
        awesome-terminal-fonts
        noto-fonts
        noto-fonts-cjk
        noto-fonts-emoji
    )
}

package_tdpeuter-me() {
    depends=(
        firefox
        nextcloud-client
        qutebrowser
    )
    
    # Development
    depends+=(
        code
    )

    # Tools
    depends+=(
        vifm
        zathura
        zathura-pdf-mupdf
        zellij
    )

    # Socials
    depends+=(
        betterbird
    )

    # Entertainment
    depends+=(
    )

    post_install() {
        code --install-extension ms-vscode.cpptools
    }
}
